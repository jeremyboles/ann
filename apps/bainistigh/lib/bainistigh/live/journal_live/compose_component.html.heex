<dialog class="ComposeComponent" id="compose-component" phx-hook="Dialog">
  <header>
    <button phx-click="close-compose"><span>Back</span></button>
  </header>
  
  <%= if @entry do %>
    <%= render_slot(@inner_block) %>
  <% end %>

  <footer>
    <button phx-click="save" phx-target={@myself}>Save Without Publishing</button>
    <button phx-click="publish" phx-target={@myself}>Publish</button>
  </footer>
</dialog>